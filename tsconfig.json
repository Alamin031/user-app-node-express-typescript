{
  "compilerOptions": {
    "outDir": "./dist",        // Redirect output structure to the directory.
    "rootDir": "./src",        // Specify the root directory of input files.
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

